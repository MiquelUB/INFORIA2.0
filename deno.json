{
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "esnext"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"],
      "exclude": ["_fresh/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["no-explicit-any"],
      "exclude": []
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"],
      "exclude": ["_fresh/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch index.ts",
    "test": "deno test --allow-net --allow-env",
    "deploy": "supabase functions deploy"
  },
  "importMap": "./import_map.json"
}